<%- include("../partials/head") %>

<nav class="navbar navbar-expand-lg bg-body-tertiary">
  <div class="container">
    <a class="navbar-brand brand-accent" href="/">KMITL NEW</a>
  </div>
</nav>

<main class="container py-4" style="max-width: 560px;">
  <h1 class="mb-3">เข้าสู่ระบบ</h1>
  <p class="text-muted">เข้าสู่ระบบด้วยรหัสผู้ใช้และรหัสผ่าน</p>

  <% if (error) { %>
    <div class="alert alert-danger">ชื่อผู้ใช้หรือรหัสผ่านไม่ถูกต้อง</div>
  <% } %>

  <!-- ฟอร์ม login -->
  <form method="post" action="/login" class="card card-body">
    <div class="mb-3">
      <label class="form-label">รหัสผู้ใช้</label>
      <input class="form-control" name="username" required />
    </div>
    <div class="mb-3">
      <label class="form-label">รหัสผ่าน</label>
      <input class="form-control" name="password" type="password" required />
    </div>
    <button class="btn btn-primary" type="submit">เข้าสู่ระบบ</button>
  </form>

  <!-- ตารางบัญชีตัวอย่างสำหรับสอบ -->
  <div class="card mt-3">
    <div class="card-body">
      <h6 class="card-title">บัญชีตัวอย่าง (สำหรับสอบ)</h6>
      <div class="table-responsive">
        <table class="table table-sm align-middle mb-0">
          <thead>
            <tr>
              <th>ชื่อ</th>
              <th>บทบาท</th>
              <th>รหัสผู้ใช้</th>
              <th>รหัสผ่าน</th>
            </tr>
          </thead>
          <tbody>
            <% users.forEach(u => { %>
              <tr>
                <td><%= u.name %></td>
                <td><%= u.role === 'reviewer' ? 'ผู้ตรวจสอบ' : 'ผู้ใช้ทั่วไป' %></td>
                <td><code><%= u.username %></code></td>
                <td><code><%= u.password %></code></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>

<%- include("../partials/foot") %>
